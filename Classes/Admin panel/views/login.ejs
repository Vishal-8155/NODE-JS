<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css" />

    <link rel="stylesheet" href="../../plugins/icheck-bootstrap/icheck-bootstrap.min.css" />
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css" />
</head>

<body class="hold-transition login-page">
    <div class="login-box">
        <div class="card card-outline-tabs card-lightblue">
            <div class="card-header text-center">
                <a href="/login" class="h1"><b>Log In</b></a>
            </div>
            <div class="card-body">

                <% if(message){ %>
                    <div class="w-100 rounded p-2 mb-3 btn-danger text-white" role="alert">
                        <%= message %>
                    </div>
                    <% } %>

                        <p class="login-box-msg">Sign in to start your session</p>

                        <form action="/checkLogin" method="post">
                            <div class="input-group mb-3">
                                <input type="email" name="uEmail" class="form-control" placeholder="Email" />
                                <div class="input-group-append"></div>
                            </div>
                            <div class="input-group mb-3">
                                <input type="password" name="uPass" class="form-control" placeholder="Password" />
                                <div class="input-group-append"></div>
                            </div>
                            <div class="row">
                                <div class="col-12 mb-2">
                                    <button type="submit" class="btn btn-info btn-block">
                                        Log In
                                    </button>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <a href="/register" type="submit" class="btn btn-danger btn-block">Sign Up</a>
                                </div>
                            </div>
                        </form>

                        <!-- <div class="social-auth-links text-center mt-2 mb-3">
                            <a href="#" class="btn btn-block btn-primary">
                                <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                            </a>
                            <a href="#" class="btn btn-block btn-danger">
                                <i class="fab fa-google-plus mr-2"></i> Sign in using Google
                            </a>
                        </div> -->

                        <p class="mb-1 mt-3 d-flex justify-content-end">
                            <a href="/passwordforgot">Forgot Password ?</a>
                        </p>
            </div>
        </div>
        <!-- /.card -->
    </div>
    <!-- /.login-box -->

    <!-- jQuery -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../../dist/js/adminlte.min.js"></script>
</body>

</html>